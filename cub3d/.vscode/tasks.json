	"version": "2.0.0",
	"tasks": [
		{
			"label": "verify",
			"type": "shell",
			"command": "mvn -B verify",
			"group": "build"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "mvn -B test",
			"group": "test"
		},
		{
			"type":"shell",
			"label":"gcc build active file",
			"command":"/usr/bin/gcc",
			"args":[
				"-g",
				"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
		},
		{
			"type":"shell",
			"label":"cub3d debugger",
			"command":"/usr/bin/gcc",
			"args":[
				"-g",
				"-I.",
				"-I./libft",
				"/home/user42/Documents/Academia/cub3d/*.c",
				"/home/user42/Documents/Academia/cub3d/libft/*.c",
				"/home/user42/Documents/Academia/cub3d/map_parser/*.c",
				"-o",
				"/home/user42/Documents/Academia/cub3d/a.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
		}
	]
}